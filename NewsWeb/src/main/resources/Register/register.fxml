<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
        prefWidth="420"
        prefHeight="720"
        stylesheets="@css/register.css"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.example.controller.RegisterController">

    <children>
        <VBox alignment="CENTER"
              spacing="16"
              AnchorPane.topAnchor="0"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <VBox alignment="CENTER" spacing="14" maxWidth="320" styleClass="login-card">
                <Label text="BÁO MỚI" styleClass="app-title"/>
                <Label text="Tạo tài khoản mới" styleClass="sub-title"/>
                <TextField fx:id="usernameField"
                           promptText="Tên tài khoản"
                           styleClass="input-field"/>
                <TextField fx:id="emailField"
                           promptText="Email"
                           styleClass="input-field"/>
                <PasswordField fx:id="passwordField"
                               promptText="Mật khẩu"
                               styleClass="input-field"/>
                <PasswordField fx:id="confirmPasswordField"
                               promptText="Nhập lại mật khẩu"
                               styleClass="input-field"/>
                <Label fx:id="errorLabel" visible="false" managed="false" styleClass="error-text"/>
                <Button text="Đăng ký" maxWidth="Infinity" onAction="#handleRegister" styleClass="login-button"/>
                <HBox alignment="CENTER" spacing="4">
                    <Label text="Đã có tài khoản?"/>
                    <Hyperlink text="Đăng nhập" onAction="#goToLogin"/>
                </HBox>

            </VBox>
        </VBox>
    </children>
</AnchorPane>
