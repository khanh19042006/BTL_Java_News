<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720" prefWidth="420" stylesheets="@css/register.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.RegisterController">

    <children>
        <VBox alignment="CENTER" spacing="16" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <VBox alignment="CENTER" maxWidth="320" spacing="14" styleClass="login-card">

                <Label styleClass="app-title" text="BÁO MỚI" />
                <Label styleClass="sub-title" text="Tạo tài khoản mới" />

                <TextField fx:id="usernameField" promptText="Tên tài khoản" styleClass="input-field" />

                <TextField fx:id="emailField" promptText="Email" styleClass="input-field" />

                <PasswordField fx:id="passwordField" promptText="Mật khẩu" styleClass="input-field" />

                <PasswordField fx:id="confirmPasswordField" promptText="Nhập lại mật khẩu" styleClass="input-field" />
                <HBox fx:id="otpBox"
                      spacing="10"
                      alignment="CENTER"
                      visible="false"
                      managed="false">

                    <TextField fx:id="otpField"
                               promptText="Nhập mã OTP"
                               HBox.hgrow="ALWAYS"
                               styleClass="input-field"/>

                    <Button fx:id="verifyButton"
                            text="Xác nhận"
                            onAction="#handleVerifyOtp"/>
                </HBox>

                <Label fx:id="errorLabel" managed="false" styleClass="error-text" visible="false" />

                <Button maxWidth="Infinity" onAction="#handleRegister" styleClass="login-button" text="Đăng ký" />

                <HBox alignment="CENTER" spacing="4">
                    <Label text="Đã có tài khoản?" />
                    <Hyperlink onAction="#goToLogin" text="Đăng nhập" />
                </HBox>

            </VBox>
        </VBox>
    </children>
</AnchorPane>
