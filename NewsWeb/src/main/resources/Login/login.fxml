<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane
        prefWidth="420"
        prefHeight="720"
        stylesheets="@css/login.css"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.example.controller.LoginController">

    <children>

        <VBox
                alignment="CENTER"
                spacing="16"
                AnchorPane.topAnchor="0"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0">

            <!-- LOGIN CARD -->
            <VBox
                    alignment="CENTER"
                    spacing="14"
                    maxWidth="320"
                    styleClass="login-card">

                <!-- TITLE -->
                <Label
                        text="BÁO MỚI"
                        styleClass="app-title"/>

                <Label
                        text="Đăng nhập để tiếp tục"
                        styleClass="sub-title"/>

                <!-- USERNAME -->
                <TextField
                        fx:id="usernameField"
                        promptText="Tên tài khoản"
                        styleClass="input-field"/>

                <!-- PASSWORD -->
                <PasswordField
                        fx:id="passwordField"
                        promptText="Mật khẩu"
                        styleClass="input-field"/>

                <!-- ERROR MESSAGE -->
                <Label
                        fx:id="errorLabel"
                        text="Sai tài khoản hoặc mật khẩu"
                        visible="false"
                        managed="false"
                        styleClass="error-text"/>

                <!-- REMEMBER -->
                <HBox alignment="CENTER_LEFT" maxWidth="Infinity">
                    <CheckBox
                            fx:id="rememberCheckBox"
                            text="Nhớ tài khoản"/>
                </HBox>

                <!-- LOGIN BUTTON -->
                <Button
                        fx:id="loginButton"
                        text="Đăng nhập"
                        maxWidth="Infinity"
                        onAction="#handleLogin"
                        styleClass="login-button"/>

                <!-- FORGOT PASSWORD -->
                <Hyperlink
                        fx:id="forgotPasswordLink"
                        text="Quên mật khẩu?"/>

                <!-- REGISTER -->
                <HBox alignment="CENTER" spacing="4">
                    <Label text="Chưa có tài khoản?"/>
                    <Hyperlink
                            fx:id="registerLink"
                            text="Đăng ký"/>
                </HBox>

            </VBox>
        </VBox>

    </children>
</AnchorPane>
