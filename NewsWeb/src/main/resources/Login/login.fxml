<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="408.0" prefWidth="595.0" stylesheets="@css/login.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="LoginController">

    <!-- Khung chính cho app mobile -->
    <VBox layoutX="150.0" prefWidth="300" spacing="16">

        <!-- Logo / Title -->
        <Label fx:id="web" text="BÁO ONLINE">
        </Label>

        <Label fx:id="hello" text="Xin chào," />

        <!-- Username -->
        <Label fx:id="usernameField" text="Tên tài khoản:" />
        <TextField fx:id="name_input" promptText="Nhập tên tài khoản" />

        <!-- Password -->
        <Label fx:id="passwordField" text="Mật khẩu:" />
        <PasswordField fx:id="pass_input" promptText="Nhập mật khẩu" />

        <!-- Remember -->
        <CheckBox fx:id="nho" text="Nhớ tài khoản" />

        <!-- Error -->
        <Label fx:id="error" style="-fx-text-fill: red;" text="Sai tên tài khoản hoặc mật khẩu." />

        <!-- Login button -->
        <Button fx:id="login" maxWidth="Infinity" prefHeight="45" text="Đăng Nhập" onAction="#handleLogin" />

        <!-- Links -->
        <Hyperlink fx:id="link_quen" text="Quên mật khẩu ?" />
        <Hyperlink fx:id="link_dki" text="Đăng ký" />

    </VBox>
</AnchorPane>
