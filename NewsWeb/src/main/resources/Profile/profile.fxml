<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane
        prefWidth="420"
        prefHeight="720"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.example.controller.HomeController">

   <top>
      <VBox spacing="10" padding="10">

         <Label text="PROFILE"/>

         <HBox spacing="10">
            <ImageView fx:id="avatarImage"
                       fitWidth="80"
                       fitHeight="80"
                       preserveRatio="true"/>

            <VBox spacing="5">
               <Label fx:id="usernameLabel" text="Username"/>
               <Label fx:id="emailLabel" text="Gmail"/>
               <Label fx:id="statusLabel" text="Trạng thái"/>
            </VBox>
         </HBox>

         <Label text="Bài viết của bạn"/>
      </VBox>
   </top>

   <center>
      <ListView fx:id="userPostsList"/>
   </center>

</BorderPane>
